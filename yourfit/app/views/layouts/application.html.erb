  <link href='http://fonts.googleapis.com/css?family=Aladin' rel='stylesheet' type='text/css'>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
  <body>

    <div id="wrapper">

      <!-- Navigation -->
      <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <a href="/"><h1><strong>your </strong>fit</h1></a>
          <% if current_user %>
            <%= link_to "sign out", destroy_user_session_path, :method => :delete %>
          <% else %>
            <%= link_to "sign in", new_user_session_path, :method => :new %>
          <% end %>
        </div>

        <div class="collapse navbar-collapse navbar-ex1-collapse">
            <ul class="nav navbar-nav side-nav">
              <!-- if signed in, show full side bar menu, otherwise link to registration -->
              <% if current_user %>
                  <li>
                      <% if current_user %>
                      <a href="/users/<%= current_user.id %>/profiles/<%= current_user.id %>"><i class="glyphicon glyphicon-user"></i>
                        <%= current_user.email %>
                      </a>
                      <% else %>
                      <% end %>
                  </li>
                  <li>
                    <!-- List all the templates etc that belong to current_user to show until they sign out -->
                      <a href="/workouts"><i class="fa fa-fw fa-bar-chart-o"></i> Train</a>
                      <ul id="demo" class="collapse">
                          <li>
                              <a href="#">Dropdown Item</a>
                          </li>
                          <li>
                              <a href="#">Dropdown Item</a>
                          </li>
                      </ul>
                  </li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-spoon"></i> Nutrition <span class="caret"></span></a>
                      <ul id="demo" class="dropdown-menu" role="menu">
                          <li>
                              <a href="#">Dropdown Item</a>
                          </li>
                          <li>
                              <a href="#">Dropdown Item</a>
                          </li>
                      </ul>
                  </li>

                  <li>
                      <a href="forms.html"><i class="fa fa-fw fa-edit"></i> More Stuff</a>
                  </li>

                  <li>
                      <a href="bootstrap-grid.html"><i class="fa fa-fw fa-wrench"></i> To Make This</a>
                  </li>
                  <li>
                      <a href="javascript:;" data-toggle="collapse" data-target="#demo"><i class="fa fa-fw fa-arrows-v"></i> Look Good<i class="fa fa-fw fa-caret-down"></i></a>
                  </li>
                  <li>
                      <a href="blank-page.html"><i class="fa fa-fw fa-file"></i> Inspiration</a>
                  </li>
                  <li>
                      <a href="index-rtl.html"><i class="glyphicon glyphicon-blackboard"></i> Timelines</a>
                  </li>
              <% else %>
              <!-- When user is not signed in, show this -->
              <!-- In the future, have more for side bar when not signed in... maybe the description of the website here -->
                  <li>
                      <a href="/users/sign_up"><i class="fa fa-play-circle-o"></i> Start Planning!</a>
                  </li>
              <% end %>

            </ul>
        </div>
      </nav>
    </div>

    <div id="page-wrapper">
      <div class="container-fluid">


        <%= yield %>

      </div>
    </div>
